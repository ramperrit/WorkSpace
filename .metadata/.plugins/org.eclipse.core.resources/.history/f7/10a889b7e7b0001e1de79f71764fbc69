package Chapter8;

public interface RemoteControl {
	public void turnOn();
	
	//반드시 선언과 동시에 초기화
	int MAX_VOLUME = 10;
	int MIN_VOLUME = 0;
	
	void turnOff();
	void setVolume(int volume);
	
	default void setMute(boolean mute) {
		if(mute) {
			System.out.println("무음 처리합니다.");
			setVolume(MIN_VOLUME);
		}else {
			System.out.println("무음을 해제합니다.");
		}
	}
}
