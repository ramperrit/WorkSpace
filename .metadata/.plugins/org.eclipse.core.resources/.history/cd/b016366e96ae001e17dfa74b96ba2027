package Chapter5;

import java.util.*;

public class Pr09 {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		int i =0;
		int numOfStudent =0;
		int[]scores = null;
		int choice =0;
		int sum =0;
		
		//반복 출력 while 
		System.out.println("---------------------------------------------");
		System.out.println("1.학생수 | 2.점수입력 | 3.점수리스트 | 4.분석 | 5.종료 ");
		System.out.println("---------------------------------------------");
				
		//선택값 받기
		System.out.println("선택> ");
		choice = Integer.parseInt(scan.nextLine());
		
		//1.학생수
		if(choice==1) {
		System.out.printf("선택> %d\n",choice);
		System.out.println("학생수> ");
		numOfStudent = Integer.parseInt(scan.nextLine());
		scores = new int[numOfStudent];  // [,,,,]
		}
		
		
		//2.점수입력
		else if(choice==2) {
		System.out.printf("선택> %d\n",choice);
		for(int j=0;j<numOfStudent;j++) {
		System.out.printf("scores[%d]\n",j);
		int score = Integer.parseInt(scan.nextLine());
		scores[j] = score; 
		   }
		}
		
		//3. 점수리스트
		else if(choice==3) {
		System.out.printf("선택> %d\n",choice);
		for(int j=0;j<3;j++) {
		System.out.printf("scores[%d]: %d\n",i,scores);
		}
		}
		
		//4. 분석
		else if(choice==4) {
		System.out.printf("선택> %d\n",choice);
		for(int k : scores) {
			int max = scores[0];
			if(max > scores[0]) {
				max = max;
				System.out.println("최고 점수: "+max);
			}
		    sum = sum + k;
		    int avg = sum/numOfStudent;
		    System.out.println("평균 점수: "+avg);
		}
		}

	}

}
