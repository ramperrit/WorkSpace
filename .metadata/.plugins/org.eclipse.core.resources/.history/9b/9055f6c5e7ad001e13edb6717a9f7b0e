package Chapter5;

import java.util.*;

public class Student {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		
		//학급 수 받기
		System.out.println("학급 수를 입력하세요 -->");
		int classNum = Integer.parseInt(scan.nextLine());
		
		//반의 학생수 받기
		for (int i=0;i<classNum;i++) {
		System.out.println((i+1)+"반의 학생 수를 입력하세요-->");
		int studentNum = Integer.parseInt(scan.nextLine());
		//각 반의 키 데이터 받기
				for (int j=0;j<studentNum;j++) {
					System.out.println((i+1)+"반의"+(j+1)+"번 학생의 키를 입력하세요-->");
					int studentHeights = Integer.parseInt(scan.nextLine());
					//배열 설정
					int [][] heights = new int [classNum][j];
					System.out.println(heights[1][1]);
				}
		}
		
		
		
		
	
		
		
		

	}

}
