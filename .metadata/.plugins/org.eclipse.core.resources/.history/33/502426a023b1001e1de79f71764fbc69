package Chapter8_Example2;

public class BusinessTaxPayer extends TaxPayer{
	private int sales;
	private int cost;
	private int result = sales - cost;
	
	@Override
	public double calcTax() {
		double tax;
		if(result <= 0) {
			tax = 0;
		}else if(result > 0 && result <= 40000000) {
			tax = result * 0.1; 
		}else {
			tax = result * 0.2;
		}
		return tax;
	}
	
	@Override
	public String getInfo() {
		
		return null;
	}
	
	
}
