package Chapter5;

import java.util.*;

public class Pr09 {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		int i =0;
		int numOfStudent =0;
		int scores =0;
		//반복 출력
		while(i<5) {
		System.out.println("---------------------------------------------");
		System.out.println("1.학생수 | 2.점수입력 | 3.점수리스트 | 4.분석 | 5.종료 ");
		System.out.println("---------------------------------------------");
				
		//1.학생수
		if(i==0) {
		System.out.printf("선택> %d\n",i+1);
		System.out.println("학생수> ");
		numOfStudent = Integer.parseInt(scan.nextLine());
		}
		i++;
		
		//2.점수입력
		if(i==1) {
		System.out.printf("선택> %d\n",i+1);
		for(int j=0;j<3;j++) {
		System.out.printf("scores[%d]\n",j);
		scores = Integer.parseInt(scan.nextLine());
		   }
		}
		i++;
		
		//3. 점수리스트
		System.out.printf("선택> %d\n",i+1);
		System.out.println
		
		}

	}

}
